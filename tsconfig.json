{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "ts-node": {
      "transpileOnly": true,
      "files": true
    }
  }